{
  "cli": { "version": ">= 6.0.0" },
  "build": {
    "beta": {
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "beta",
        "EXPO_PUBLIC_API_URL": "https://beta-api.example.com",
        "ANDROID_PACKAGE": "tech.myapp",
        "IOS_BUNDLE_IDENTIFIER": "tech.nxtwave.myniat.beta"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "prod",
        "EXPO_PUBLIC_API_URL": "https://api.example.com",
        "ANDROID_PACKAGE": "tech.myapp",
        "IOS_BUNDLE_IDENTIFIER": "tech.nxtwave.myniat"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./service-account-key.json"
      }
    }
  }
}
